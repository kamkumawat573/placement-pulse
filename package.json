{
  "name": "placement-pulse",
  "version": "1.0.0",
  "description": "MBA Placement Preparation Platform - Master your MBA placements and internships with expert guidance, mock interviews, and placement strategy from MBA alumni",
  "private": true,
  "author": "Vishal Mishra",
  "license": "MIT",
  "homepage": "https://placement-pulse.vercel.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/vishal-mishra/placement-pulse.git"
  },
  "keywords": [
    "mba",
    "placement",
    "internship",
    "preparation",
    "nextjs",
    "react",
    "typescript",
    "mongodb",
    "razorpay"
  ],
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:staging": "set NODE_ENV=production && set APP_ENV=staging && next build",
    "build:preview": "set NODE_ENV=production && set APP_ENV=preview && next build",
    "build:production": "next build",
    "start": "set NODE_ENV=production && next start",
    "start:staging": "set NODE_ENV=production && set APP_ENV=staging && next start",
    "start:preview": "set NODE_ENV=production && set APP_ENV=preview && next start",
    "start:production": "set APP_ENV=production && next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "setup-admin": "set NODE_ENV=development && node scripts/setup-admin.js",
    "seed-data": "set NODE_ENV=development && node scripts/seed-data.js",
    "analyze": "cross-env ANALYZE=true next build",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@hookform/resolvers": "^3.10.0",
    "@radix-ui/react-dropdown-menu": "2.1.4",
    "@radix-ui/react-label": "2.1.1",
    "@radix-ui/react-progress": "latest",
    "@radix-ui/react-separator": "latest",
    "@radix-ui/react-slot": "1.1.1",
    "@radix-ui/react-tabs": "latest",
    "@types/nodemailer": "^7.0.1",
    "@vercel/analytics": "latest",
    "autoprefixer": "^10.4.20",
    "bcryptjs": "^3.0.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.2",
    "geist": "latest",
    "googleapis": "^160.0.0",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.454.0",
    "mongoose": "^8.19.0",
    "multer": "^2.0.2",
    "next": "^14.2.33",
    "next-themes": "^0.4.6",
    "nodemailer": "^7.0.6",
    "razorpay": "^2.9.6",
    "react": "^18",
    "react-dom": "^18",
    "react-google-recaptcha": "^3.1.0",
    "react-hook-form": "^7.60.0",
    "tailwind-merge": "^2.5.5",
    "uuid": "^13.0.0",
    "zod": "3.25.67"
