# Environment Configuration
# NODE_ENV should only be: development, production, or test
NODE_ENV=development

# APP_ENV controls application-specific logic (development, staging, production, preview)
APP_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/placementpulse

# JWT Secret
JWT_SECRET=your-jwt-secret-here

# CashFree Configuration
NEXT_PUBLIC_CASHFREE_APP_ID=your-cashfree-app-id
CASHFREE_SECRET_KEY=your-cashfree-secret-key
CASHFREE_ENVIRONMENT=sandbox

# reCAPTCHA
NEXT_PUBLIC_RECAPTCHA_SITE_KEY=your-recaptcha-site-key
RECAPTCHA_SECRET_KEY=your-recaptcha-secret-key

# Admin Configuration
ADMIN_EMAIL=admin@placementpulse.com
ADMIN_PASSWORD=admin123
